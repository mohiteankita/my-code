@model Online_Pharmacy_System_Project.Models.Customer

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <style>
        body {
            background-color: aliceblue;
        }

        form-horizontal, h2 {
            margin: 10px 0px 0px 50px;
        }
    </style>

    @if (Session["editmedi"] != null)
    {
        var message = Session["editmedi"].ToString();
        <script type="text/javascript">
        window.onload = function () {
            alert("@message");
            
        }
        </script>
    }
</head>
<h2>Edit</h2>


